<%= form_for([:admin, @post]) do |f| %>
   <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', autofocus: true %>
   </div>

   <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', rows: 20, 'data-editor' => 'true' %>
   </div>

   <div class="form-group">
      <%= f.label :tags_list %>
      <%= f.text_field :tags_list, class: 'form-control' %>
   </div>

   <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, options_for_select(@statuses), {class: 'form-control'} %>
   </div>

   <div class="form-group">
      <%= f.submit 'Save Post', class: 'btn btn-primary' %>
   </div>
<% end -%>
