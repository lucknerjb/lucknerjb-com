<h2>Posts</h2>

<table class="table table-striped">
   <thead>
      <tr>
         <th>ID</th>
         <th>Identifier</th>
         <th>Title</th>
         <th>Status</th>
         <th>&nbsp;</th>
      </tr>
   </thead>
   <tbody>
      <% @posts.each do |post| %>
         <tr>
            <td><%= post.id %></td>
            <td><%= post.identifier %></td>
            <td><%= post.title %></td>
            <td><%= post.status %></td>
            <td>
               <%= link_to 'View', admin_post_path(post.id), class: 'btn btn-default' %>
               <%= link_to 'Edit', edit_admin_post_path(post.id), class: 'btn btn-primary' %>
               <%= link_to 'Delete', admin_post_path(post.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
            </td>
         </tr>
      <% end -%>
   </thead>
</table>
